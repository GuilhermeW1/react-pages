{
    "env": {
        "browser": true,
        "es2021": true,
        "jest" : true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
        
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react", "jest"
    ],
    "rules": {
        "strict": ["error", "never"],
        "no-var": "error"
    },
    "settings": {
        "react":{
            "version": "detect"
        }
    }
}
